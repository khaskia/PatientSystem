<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.EditPatient"
    tools:showIn="@layout/activity_edit_patient"
    android:background="#ffffff">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.EditPatient"
    tools:showIn="@layout/activity_edit_patient"
    android:background="#ffffff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UP_Name"
        android:hint="Patent Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/UP_tel"
        android:hint="Phone"
        android:layout_below="@+id/UP_Name"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/UP_Email"
        android:hint="Email"
        android:layout_below="@+id/UP_tel"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:padding="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/UP_Date"
        android:hint="Arrival Date"
        android:editable="false"
        android:layout_below="@+id/UP_Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:background="#4da7a7"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/UP_Time"
        android:hint="Arrival Time"
        android:layout_below="@+id/UP_Email"
        android:layout_toRightOf="@+id/UP_Date"
        android:layout_toEndOf="@+id/UP_Date"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:editable="false"
        android:background="#4da7a7"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UP_Disease"
        android:layout_alignParentStart="true"
        android:hint="Disease"
        android:layout_below="@+id/UP_Time"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/UP_Medication"
        android:layout_alignParentStart="true"
        android:hint="Medication"
        android:layout_below="@+id/UP_Disease"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/UP_Cost"
        android:layout_alignParentStart="true"
        android:hint="Cost"
        android:layout_below="@+id/UP_Medication"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"
        android:textAlignment="center"
        android:padding="15dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button6"
        android:onClick="UpdateData"
        android:background="#4da7a7"
        android:layout_below="@+id/UP_Cost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button7"
        android:background="#4da7a7"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:onClick="CancelEditButton"/>
</RelativeLayout>
</ScrollView></RelativeLayout>