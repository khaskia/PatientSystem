<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.DetailsOfPatient"
    tools:showIn="@layout/activity_details_of_patient"
    android:background="#ffffff">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.DetailsOfPatient"
    tools:showIn="@layout/activity_details_of_patient"
    android:background="#ffffff"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Patient Name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PatentName"
        android:id="@+id/View_Name"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#4da7a7"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="tel"
        android:id="@+id/textView2"
        android:layout_below="@+id/View_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="011111111"
        android:id="@+id/View_Tel"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/View_Name"
        android:layout_alignStart="@+id/View_Name"
        android:textColor="#4da7a7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/View_Emaissl"
        android:layout_below="@+id/View_Tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mohamed@gmail.com"
        android:id="@+id/View_Email"
        android:layout_below="@+id/View_Emaissl"
        android:layout_alignLeft="@+id/View_Tel"
        android:layout_alignStart="@+id/View_Tel"
        android:textColor="#4da7a7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Of Arrival"
        android:id="@+id/textView3"
        android:layout_below="@+id/View_Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="06-06-2015"
        android:id="@+id/View_date"
        android:textColor="#4da7a7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="01:30"
        android:id="@+id/View_Time"
        android:textColor="#4da7a7"
        android:layout_below="@+id/View_date"
       android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Disease"
        android:id="@+id/textView5"
        android:layout_below="@+id/View_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="30dp"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cold"
        android:id="@+id/View_Disease"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medication"
        android:id="@+id/textView6"
        android:layout_below="@+id/View_Disease"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pills"
        android:id="@+id/View_Medication"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cost"
        android:id="@+id/textView8"
        android:layout_below="@+id/View_Medication"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cost"
        android:id="@+id/View_Cost"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:textColor="#4da7a7"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_Edit"
        android:onClick="Send_data"
        android:background="@drawable/edit"
        android:textColor="#ffffff"

        android:layout_alignBaseline="@+id/View_Tel"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/btn_Delete"
        android:layout_alignStart="@+id/btn_Delete"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btn_Delete"
        android:onClick="DeleteRecord"
        android:background="@drawable/delete1"
        android:textColor="#ffffff"

        android:layout_alignBaseline="@+id/btn_Cancell"
        android:layout_alignBottom="@+id/btn_Cancell"
        android:layout_alignRight="@+id/btn_Cancell"
        android:layout_alignEnd="@+id/btn_Cancell"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Cancel"
            android:id="@+id/btn_Cancell"
            android:onClick="CancelDetailButton"
            android:background="#4da7a7"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/View_Cost"
            android:layout_alignStart="@+id/View_Cost"/>

    </RelativeLayout>



</ScrollView>

</RelativeLayout>