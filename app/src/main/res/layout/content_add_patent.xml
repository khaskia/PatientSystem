<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.AddPatent"
    tools:showIn="@layout/activity_add_patent"
    android:background="#ffffff">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moham.patientsystem.AddPatent"
    tools:showIn="@layout/activity_add_patent"
    android:background="#ffffff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Add_Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Patient Name"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyz "
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/Add_tel"
        android:layout_below="@+id/Add_Name"
        android:layout_centerHorizontal="true"
        android:hint="Phone"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Add_Email"
        android:layout_below="@+id/Add_tel"
        android:layout_alignLeft="@+id/Add_tel"
        android:layout_alignStart="@+id/Add_tel"
        android:hint="Email"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:padding="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Add_Date"
        android:hint="Arrival Date"
        android:layout_below="@+id/Add_Email"
        android:layout_toLeftOf="@+id/Add_Time"
        android:layout_toStartOf="@+id/Add_Time"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:editable="false"
        android:textColor="#ffffff"
        android:background="#4da7a7"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/Add_Time"
        android:hint="Arrival Time"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:layout_below="@+id/Add_Email"
        android:layout_alignRight="@+id/Add_Email"
        android:layout_alignEnd="@+id/Add_Email"
        android:editable="false"
        android:textColor="#ffffff"
        android:background="#4da7a7"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Add_Disease"
        android:layout_below="@+id/Add_Date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Disease"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Add_Medication"
        android:layout_below="@+id/Add_Disease"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Medication"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:padding="15dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Add_Cost"
        android:layout_below="@+id/Add_Medication"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Cost"
        android:textAlignment="center"
        android:textColor="#4da7a7"
        android:padding="15dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/Btn_Save"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/Add_Cost"
        android:layout_centerHorizontal="true"
        android:background="#4da7a7"
        android:singleLine="true"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_Cancel"
        android:onClick="CanceladdButton"
        android:background="#4da7a7"
        android:layout_below="@+id/Btn_Save"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="#ffffff"/>

</RelativeLayout>
</ScrollView>
    </RelativeLayout>